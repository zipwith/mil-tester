bitdata Bay/11 = Bay [ u :: Bit 7 | 0 ]

entrypoint mkU, getU, updU
mkU v      = Bay [u=v]
getU bay   = case bay of Bay r -> r.u
updU bay v = case bay of Bay r -> Bay r[u=v]

